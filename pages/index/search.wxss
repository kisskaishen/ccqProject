/* pages/index/search.wxss */

.header {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 90rpx;
    background-color: #333;
    align-items: center;
    font-size: 28rpx;
}

.headerBg {
    display: flex;
    flex-direction: row;
    width: 608rpx;
    margin-left: 30rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #333;
    background-color: #fff;
    border-radius: 8rpx;
}

.headerBg picker {
    position: relative;
    width: 90rpx;
    text-indent: 10rpx;
}

.headerBg picker::after {
    position: absolute;
    content: '';
    right: -6rpx;
    top: 26rpx;
    border-left: 10rpx solid transparent;
    border-right: 10rpx solid transparent;
    border-top: 10rpx solid #000;
}

.headerBg input {
    flex: 1;
    width: 518rpx;
    height: 60rpx;
    padding-left: 20rpx;
}

.searchBtn {
    margin-left: 24rpx;
}

.content {
    flex: 1;
    width: 100%;
    display: flex;
    flex-direction: column;
    color: #333;
    margin-top: 20rpx;
    font-size: 30rpx;
}

.history {
    margin-top: 60rpx;
}

.contentTitle {
    margin: 0 30rpx;
    height: 50rpx;
    line-height: 50rpx;
}

.contentList {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin: 0 30rpx;
}

.contentList view {
    width: 22%;
    height: 54rpx;
    line-height: 52rpx;
    margin-right: 4%;
    margin-top: 20rpx;
    background-color: #fff;
    border: 1rpx solid #dcdcdc;
    box-sizing: border-box;
    text-align: center;
}

.contentList view:nth-child(4n) {
    margin-right: 0;
}
