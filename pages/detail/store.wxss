/* pages/detail/store.wxss */

.container {
    width: 100%;
}

.container > view {
    width: 100%;
}

.storeImg {
    width: 100%;
    height: 500rpx;
}

.storeImg image {
    width: 100%;
    height: 500rpx;
}

.recommendInfo {
    background-color: #e9e9e9;
    margin-top: -60rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #333;
    font-size: 30rpx;
    padding: 0 30rpx;
}

.storeInfo {
    display: flex;
    flex-direction: row;
    background-color: #353535;
    font-size: 24rpx;
    padding: 20rpx 0;
}

.storeInfoFl {
    flex: 3;
    width: 100%;
    display: flex;
    flex-direction: column;
    margin-left: 30rpx;
    color: #adadad;
}

.storeInfoFl view {
    width: 100%;
    line-height: 42rpx;
    flex: 2;
}

.storeInfoFl .redu {
    font-size: 32rpx;
    color: #fff;
    flex: 3;
    margin-bottom: 10rpx;
    line-height: 60rpx;
}

.storeInfoFl text {
    margin-right: 30rpx;
}

.storeInfoFr {
    margin-right: 30rpx;
}

.storeInfoFr button {
    padding: 0 20rpx;
    background-color: #f7a213;
    color: #fff;
}

.storeEvaluate {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 100rpx;
    background-color: #fff;
    color: #333;
    font-size: 30rpx;
    border: 1rpx solid #dcdcdc;
}

.storeEvaluate view {
    flex: 1;
    padding: 0 30rpx;
}

.evaluateNum {
    position: relative;
    text-align: right;
    color: #7a7a7a;
    margin-right: 30rpx;
    font-size: 24rpx;
}

.evaluateNum text::before {
    position: absolute;
    content: '';
    width: 24rpx;
    height: 24rpx;
    right: 0;
    top: 4rpx;
    transform: rotate(45deg);
    border-top: 1rpx solid #7a7a7a;
    border-right: 1rpx solid #7a7a7a;
}

.storeIntroduce {
    display: flex;
    flex-direction: column;
    background-color: #fff;
    color: #333;
    padding: 10rpx 0;
    margin-top: 24rpx;
    border-top: 1rpx solid #dcdcdc;
    border-bottom: 1rpx solid #dcdcdc;
}

.storeIntroduce view {
    margin: 10rpx 30rpx;
}

.storeIntroduce view:nth-child(1) {
    line-height: 54rpx;
}

.storeIntroduce image {
    width: 212rpx;
    height: 180rpx;
    margin-right: 20rpx;
    border: 1rpx solid #dcdcdc;
}

.storeIntroduce image:last-child {
    margin: 0;
}

.storeGoods .title {
    margin: 20rpx 30rpx 10rpx;
    color: #333;
}

.storeGoods .goods {
    background-color: #fff;
    margin-bottom: 20rpx;
    padding-left: 30rpx;
    height: 240rpx;
}

.storeGoods .goods navigator {
    display: block;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.goods .goodsImg {
    flex: 1;
    position: relative;
}

.goods .goodsImg .discount {
    position: absolute;
}

.discount {
    font-size: 15rpx;
    color: #fff;
}

.discount text {
    margin-left: -46rpx;
}

.goods .goodsImg image:last-child {
    width: 220rpx;
    height: 180rpx;
}

.goods .goodsInfo {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    color: #7a7a7a;
    font-size: 24rpx;
    margin-right: 30rpx;
}

.goodsInfo view {
    flex: 1;
    width: 430rpx;
    height: 42rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.goodsName {
    height: 46rpx !important;
    color: #333;
    font-size: 28rpx;
}

.goodsCcqPrice {
    height: 46rpx !important;
    color: #f7a213;
    font-size: 28rpx;
}

.moreImg {
    position: relative;
    float: right;
    font-size: 26rpx;
    padding-right: 30rpx;
    color: #999;
}

.moreImg::after {
    position: absolute;
    content: '';
    width: 24rpx;
    height: 24rpx;
    right: 0;
    top: 15rpx;
    transform: rotate(45deg);
    border-top: 1rpx solid #7a7a7a;
    border-right: 1rpx solid #7a7a7a;
}
