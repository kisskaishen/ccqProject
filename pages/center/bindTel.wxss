/* pages/center/bindTel.wxss */

.container {
    padding: 54rpx 30rpx 0;
    background-color: #fff;
}

.section {
    width: 100%;
    margin-bottom: 44rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.section .section_title {
    width: 200rpx;
    color: #333;
    font-size: 32rpx;
}

.section input {
    height: 60rpx;
    line-height: 60rpx;
    color: #333;
    padding-left: 16rpx;
    border: 1rpx solid #bfbfbf;
    border-radius: 8rpx;
    font-size: 30rpx;
}

.section input[name='captcha'] {
    width: 214rpx;
    height: 60rpx;
}

.section button {
    color: #e4393c;
    padding: 0 10rpx;
    border: 1rpx solid #e4393c;
    background-color: #fff;
}

.loginBtn {
    width: 100%;
    margin-top: 68rpx;
}

.loginBtn button {
    color: #fff;
    font-size: 34rpx;
    background-color: #f7a213;
}

/*弹框*/

.layerBg {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    color: #333;
    background-color: rgba(0, 0, 0, 0.4);
    z-index: 99;
    
}

.layerTip {
    position: absolute;
    display: flex;
    flex-direction: column;
    padding: 30rpx;
    margin-top: 170rpx;
    z-index: 999;
    font-size: 30rpx;
}

.layerTip view {
    display: flex;
    flex-direction: row;
    justify-content: center;
    font-size: 32rpx;
    color: #333;
    font-weight: bold;
    padding: 30rpx;
    background-color: #fff;
}
.layerTip view button {
    width: 300rpx;
}
.startBtn {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 60rpx;
    background-color: transparent !important;
}

.startBtn text {
    background-color: #fff;
    padding: 20rpx 40rpx;
    border-radius: 10rpx;
}

.iconSmile {
    width: 144rpx;
    height: 144rpx;
    margin-bottom: -30rpx;
    z-index: 9999;
    background: url(/image/center_smile.png) no-repeat center;
}

.againTxt {
    color: #e4393c;
    font-size: 24rpx;
    margin-top: 40rpx;
    text-decoration: underline;
    text-align: center;
} 