/* pages/center/login.wxss */

.container {
    display: block;
}

.header {
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-content: center;
    align-items: center;
    color: #eee;
    border-bottom: 1rpx solid #dcdcdc;
}

.header view {
    flex: 1;
    text-align: center;
    font-size: 30rpx;
    color: #999;
}

.curr {
    padding: 21rpx 0;
    color: #e4393c !important;
    border-bottom: 1rpx solid #e4393c;
}

.login {
    display: flex;
    flex-direction: column;
}

.login > view {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 80rpx;
    color: #333;
    border-bottom: 1rpx solid #dcdcdc;
}

.login view view {
    font-size: 30rpx;
    padding-left: 30rpx;
    padding-right: 60rpx;
}

.login input {
    font-size: 26rpx;
    flex: 1;
}
.login button {
    background-color: #e4393c;
    color: #fff;
    margin-right: 30rpx;
}

.loginBtn {
    padding: 40px 30rpx 0;
}

.loginBtn button {
    background-color: #f7a213;
    color: #fff;
}
